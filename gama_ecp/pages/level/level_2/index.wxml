<import src="../../template/win/index.wxml" />
<import src="../../template/fail/index.wxml" />
<import src="../../template/getprop/index.wxml" />
<import src="../../template/loading/index.wxml" />
<import src="../../template/menu/index.wxml" />
<swiper class='containerL' indicator-dots="{{true}}" bindchange="bindChange" current='{{current}}' indicator-active-color="#fff">
  <swiper-item class="con_item ">
    <image class='level_1_1' src='/assets/sprite/level_1_1.png' />
    <!--老板  -->
    <image class='level_1_13' bindtap='gameFail' data-index="1" src='/assets/sprite/level_1_13.png' />
    <!--同事  -->
    <image class='level_1_12' src='/assets/sprite/level_1_12.png' />
    <!--鱼竿  -->
    <image class='level_2_1' wx:if="{{sprite.pole.status==0}}" bindtap='spriteChangeHifi' data-sprite="pole" src='/assets/sprite/level_2_1.png' />
  </swiper-item>
  <swiper-item class="con_item">
    <image class='level_1_3' src='/assets/sprite/level_1_3.png' />
    <!--门  -->
    <image class='level_1_7' wx:if="{{sprite.door.status==0}}" src='/assets/sprite/level_1_7.png' />
    <image class='level_1_6' bindtap='gameWin' data-index="1" wx:else src='/assets/sprite/level_1_6.png' />
  </swiper-item>
  <swiper-item class="con_item">
    <image class='level_2_2' src='/assets/sprite/level_2_2.png' />
    <!--柜子-->
    <image class='level_1_10' src='/assets/sprite/level_1_10.png' />
    <!--钥匙-->
    <image class='level_1_5' wx:if="{{sprite.key.status==0}}" bindtap='level2Event1' src='/assets/sprite/level_1_5.png' />
    <!--钓鱼动作  -->
    <image class='level_2_4' wx:if="{{sprite.movePole.status==1}}" src='/assets/sprite/level_2_4.png' />

    <!-- 摸钥匙动作  -->
    <image class='level_2_5' wx:if="{{sprite.moveMan.status==2}}"  src='/assets/sprite/level_2_5.png' />
    <image class='level_2_6' wx:if="{{sprite.moveMan.status==3}}"  src='/assets/sprite/level_2_6.png' />
    <image class='level_2_7' wx:if="{{sprite.moveMan.status==4}}"  src='/assets/sprite/level_2_7.png' />
    <image class='level_2_9' wx:if="{{sprite.moveMan.status==5}}"  src='/assets/sprite/level_2_5.png' />
    <image class='level_2_10' wx:if="{{sprite.moveMan.status==6}}"  src='/assets/sprite/level_2_6.png' />
    <image class='level_2_11' wx:if="{{sprite.moveMan.status==7}}"  src='/assets/sprite/level_2_7.png' />
    <image class='level_2_8' wx:if="{{sprite.moveMan.status==8}}"  src='/assets/sprite/level_2_8.png' />
  </swiper-item>
</swiper>
<view class='bottom'>
  <image class='bottom_bg' src='/assets/sprite/level_1_2.png' />
  <!-- 道具栏 -->
  <view class='prop_con' wx:for="{{prop}}" wx:key="{{index}}" wx:if="{{item.status==1}}">
    <image class='prop' src="{{item.url}}" style="left:{{item.x}}rpx;top:{{item.y}}rpx;" data-prop="{{index}}" bindtouchmove="moveEvent" bindtouchend="moveOver" />
  </view>

</view>
<image class='menu' bindtap='meneChange' src='/assets/texture/menu.png' />

<view class='mask_layer' wx:if="{{layerState}}"></view>
<!--胜利亦失败-->
<template is="failPage" data="{{gameState,gameFailImg}}"></template>
<template is="winPage" data="{{gameState,gameSuccessImg}}"></template>
<!--获取道具  -->
<template is="getProp" data="{{getProp}}"></template>
<!--拟加载 -->
<template is="loading" data="{{loadingMap}}"></template>
<!--菜单栏 -->
<template is="menu" data="{{menuShow}}"></template>