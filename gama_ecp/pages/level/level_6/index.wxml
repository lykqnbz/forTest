<import src="../../template/win/index.wxml" />
<import src="../../template/fail/index.wxml" />
<import src="../../template/getprop/index.wxml" />
<import src="../../template/loading/index.wxml" />
<import src="../../template/menu/index.wxml" />
<swiper class='containerL' indicator-dots="{{true}}" bindchange="bindChange" current='{{current}}' indicator-active-color="#fff">
  <swiper-item class="con_item ">
    <image class='level_1_1' src='/assets/sprite/level_1_1.png' />
    <!--同事  -->
    <image class='level_1_12' src='/assets/sprite/level_1_12.png' />


  </swiper-item>
  <swiper-item class="con_item">
    <image class='level_1_3' src='/assets/sprite/level_1_3.png' />


    <!--出口洞  -->
    <image class='level_6_4' bindtap='gameWin' data-index="1"  src='/assets/sprite/level_6_4.png' />
    <!--枪--  -->
    <image class='level_6_5' bindtap='spriteChangeHifi' data-sprite="revolver"  src='/assets/sprite/level_6_5.png' />
    <!--老板 -->
    <image class='level_6_6' src='/assets/sprite/level_6_6.png' />

    <!--石头Tom  -->
    <image class='level_6_1 {{sprite.stoneTom.status==1?"stoneTomMove":""}}' bindtap='spriteChange' data-sprite="stoneTom"  src='/assets/sprite/level_6_1.png' />
    <!--石头Harr  -->
    <image class='level_6_2 {{sprite.stoneHarry.status==1?"stoneHarMove":""}}'  bindtap='level6Event1' src='/assets/sprite/level_6_2.png' />
    <!--石头Dick  -->
    <image class='level_6_3 {{sprite.stoneDick.status==1?"stoneDickMove":""}}' bindtap='spriteChange' data-sprite="stoneDick" src='/assets/sprite/level_6_3.png' />

  </swiper-item>
</swiper>
<view class='bottom '>
  <image class='bottom_bg ' src='/assets/sprite/level_1_2.png ' />
  <!-- 道具栏 -->
  <view class='prop_con ' wx:for="{{prop}}" wx:key="{{index}}" wx:if="{{item.status==1}}">
    <image class='prop ' src="{{item.url}}" style="left:{{item.x}}rpx;top:{{item.y}}rpx;" data-prop="{{index}}" bindtouchmove="moveEvent" bindtouchend="moveOver" />
  </view>

</view>
<image class='menu ' bindtap='meneChange' src='/assets/texture/menu.png ' />

<view class='mask_layer ' wx:if="{{layerState}}"></view>
<!--胜利亦失败-->
<template is="failPage" data="{{gameState,gameFailImg}}"></template>
<template is="winPage" data="{{gameState,gameSuccessImg}}"></template>
<!--获取道具  -->
<template is="getProp" data="{{getProp}}"></template>
<!--拟加载 -->
<template is="loading" data="{{loadingMap}}"></template>
<!--菜单栏 -->
<template is="menu" data="{{menuShow}}"></template>